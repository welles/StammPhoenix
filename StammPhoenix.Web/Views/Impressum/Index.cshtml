@using StammPhoenix.Persistence

@{
    ViewBag.Title = "Impressum";
}

@inject IDatabaseContext DatabaseContext

<div class="card container p-0 mb-2 shadow-sm">
    <h5 class="card-header">Veröffentlicher</h5>
    <div class="card-body">
        <p class="card-text">Deutsche Pfadfinderschaft Sankt Georg 13/19/12 Stamm Phoenix Feldkirchen-Westerham</p>
    </div>
</div>

<div class="card container p-0 mb-2 shadow-sm">
    <h5 class="card-header">Vorstand</h5>
    <div class="card-body">
         <div class="row">
            @{
                var contacts = await this.DatabaseContext.GetPageContacts();
            }
            @foreach (var contact in contacts)
            {
                <div class="col">
                    @contact.Name
                    <br/>
                    @contact.PhoneNumber
                    <br />
                    @contact.AddressStreet
                    <br />
                    @contact.AddressCity
                </div>

                @if (contact != contacts.Last())
                {
                    <hr class="mt-2 mb-2 d-md-none">
                }
            }
        </div>
    </div>
</div>

<div class="card container p-0 mb-2 shadow-sm">
    <h5 class="card-header">Verfasser</h5>
    <div class="card-body">
        <p class="card-text">Design und Layout: Nico Welles<br />Inhalte (soweit Autor nicht explizit angegeben): Andreas Schartner, Andreas Schlott, Nico Welles, Bernhard Jobst</p>
    </div>
</div>

<div class="card container p-0 mb-2 shadow-sm">
    <h5 class="card-header">Icons</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-auto d-flex align-items-center justify-content-center">
                <img src="@Url.Content("~/image/phoenix-512.png")" height="32"/>
            </div>
            <div class="col d-flex align-items-center">
                <a href="https://www.flaticon.com/de/kostenloses-icon/phonix_1400428">Phoenix Icon lizensiert von flaticon.com</a>
            </div>
        </div>
    </div>
</div>

<div class="card container p-0 shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-lg text-align-justify">
                Die Deutsche Pfadfinderschaft Sankt Georg (DPSG) ist als
                anerkannter Träger freier Jugendhilfe Mitglied im Bayerischen Jugendring (BJR)
                und als Verband katholischer Pfadfinderinnen und Pfadfinder
                Mitglied im Bund der Deutschen Katholischen Jugend (BDKJ)
                und der Internationalen Katholischen Konferenz des Pfadfindertums (IKKP).
                Die DPSG ist Mitglied im Ring deutscher Pfadfinderverbände (RdP)
                und von der World Organisation of the Scout Movement (WOSM)
                als Mitgliedsverband der Weltpfadfinderbewegung offiziell anerkannt.
            </div>
            <div class="col-lg-auto d-flex align-items-center justify-content-center">
                <img src="@Url.Content("~/image/dpsg.png")" height="100"/>
            </div>
        </div>
    </div>
</div>
