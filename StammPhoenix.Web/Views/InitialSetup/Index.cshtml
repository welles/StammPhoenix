@using StammPhoenix.Web.Models.InitialSetup

@model InitialSetupModel

<div class="card align-self-center">
    <div class="card-header">
        <h5 class="card-title mb-0">Admin-Account erstellen</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "InitialSetup", FormMethod.Post, new { @class = "d-flex flex-column"}))
        {
            <div class="input-group mb-3">
                <span class="input-group-text material-icons">account_circle</span>
                <input type="text" class="form-control" placeholder="Benutzername" name="@nameof(InitialSetupModel.Username)" >
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text material-icons">face</span>
                <input type="text" class="form-control" placeholder="Anzeigename" name="@nameof(InitialSetupModel.DisplayName)" >
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text material-icons">lock</span>
                <input type="password" class="form-control" placeholder="Passwort" name="@nameof(InitialSetupModel.Password)" >
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text material-icons">lock</span>
                <input type="password" class="form-control" placeholder="Passwort wiederholen" name="@nameof(InitialSetupModel.RepeatPassword)" >
            </div>
            <button type="submit" class="btn btn-dark align-self-center">Erstellen</button>
        }
    </div>
</div>